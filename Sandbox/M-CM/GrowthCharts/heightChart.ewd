<ext4:fragment onBeforeRender="getHeightData^growthChartsMCM">
  <ext4:panel title="Height for Age" layout="fit" />
    <ext4:panel title="Birth through age 3" layout="fit" />
    <ext4:chart sessionName="heightChart" animate="true" height="380" width="600" >
      <ext4:axis type="Numeric" position="left"   title="Height (cm)"    field="Height" grid="true" minimum="0" maximum="100" />
      <ext4:axis type="Time"    position="bottom" title="Date (months)"  field="Date"   grid="true" />
      <ext4:series type="line" axis="left" xField="Date" yField="Height" />
    </ext4:chart>
  </ext4:panel>
</ext4:fragment>

